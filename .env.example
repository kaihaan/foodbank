# ===========================================
# Finchley Foodbank - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Database Configuration
# -------------------------------------------
POSTGRES_USER=foodbank
POSTGRES_PASSWORD=foodbank
POSTGRES_DB=foodbank
POSTGRES_PORT=5435

# For local development (connects to host port)
DATABASE_URL=postgres://foodbank:foodbank@localhost:5435/foodbank?sslmode=disable

# -------------------------------------------
# Auth0 Backend (Go Server)
# -------------------------------------------
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.foodbank.local

# Auth0 Management API (for staff creation)
# Create M2M app in Auth0 Dashboard > Applications > Machine to Machine
AUTH0_M2M_CLIENT_ID=your-m2m-client-id
AUTH0_M2M_CLIENT_SECRET=your-m2m-client-secret
# Find in Auth0 Dashboard > Authentication > Database > Username-Password-Authentication
AUTH0_CONNECTION_ID=con_xxxxxxxxxxxxx

# -------------------------------------------
# Auth0 Frontend (React) - prefix with VITE_
# -------------------------------------------
VITE_AUTH0_DOMAIN=your-tenant.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=https://api.foodbank.local

# -------------------------------------------
# Server Ports
# -------------------------------------------
PORT=8084
BACKEND_PORT=8084
FRONTEND_PORT=80

# -------------------------------------------
# Docker Compose Usage
# -------------------------------------------
# Development (database only):
#   docker compose up -d
#
# Full stack (database + backend + frontend):
#   docker compose --profile full up -d
#
# Backend only (database + backend):
#   docker compose --profile backend up -d
